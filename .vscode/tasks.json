{
    "tasks": [
        {
            "label": "LuaOS - Build",
            "type": "shell",
            "command": "xmake",
            "args": [
                "-rvD"
            ]
        },
        {
            "label": "LuaOS - Test",
            "type": "shell",
            "command": "qemu-system-x86_64",
            "dependsOn": "LuaOS - Build",
            "args": [
                "-M", "q35",
                "-m", "1G",
                "-cdrom", "build/bin/LuaOS-x86_64.iso",
                "-s",
                "-machine", "smm=off",
                "-d", "int",
                "-no-reboot",
                "-serial", "file:luaos.log",
                "-monitor", "stdio"
            ],
            "problemMatcher": []
        }
    ]
}